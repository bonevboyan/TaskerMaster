@model CreateChatFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name here...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserIds"></label>
                <select asp-for="UserIds" class="form-control" multiple>
                    @foreach (var user in Model.UserIds)
                    {
                        <option value="@user.Id">@user.Name</option>
                    }
                </select>
                <span asp-validation-for="UserIds" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>