@using Taskord.Services.Teams.Models
@model TeamServiceModel

<a asp-controller="Chats" asp-action="Get" asp-route-teamId="@Model.Id" class="card profile">
    <div class="card-horizontal">
        <div class="img-square-wrapper">
            <img class="img-user-card" src="@Model.ImagePath">
        </div>
        <div class="card-body">
            <h4 class="card-title">Name: @Model.Name</h4>
            <p class="card-text fst-italic">Description: @Model.Description</p>
        </div>
    </div>
</a>