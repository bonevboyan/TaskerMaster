<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taskord</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Taskord.Web.styles.css" asp-append-version="true" />
</head>
<body>
    @*@await Component.InvokeAsync("Teams")*@

    <main class="content">
        <div class="container p-0">
            @*<h1 class="h3 mb-3">Messages</h1>*@
            <div class="card">
                <div class="row g-0">
                    @RenderSection("Friends", false)
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>

    @RenderSection("Members", false)

    <footer id="footer" class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Taskord
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
